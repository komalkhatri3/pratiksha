<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.harsh.nandy.cancerantidote.Otherservices"
    >

    <Button
        android:id="@+id/button_video_calling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Video Calling"
        android:layout_marginBottom="57dp"
        android:layout_above="@+id/button_vns"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_ivr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="66dp"
        android:text="Interactive voice recognition"
        android:layout_above="@+id/button_counselling_service"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button_vns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Virtual nurse service"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="91dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button_counselling_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_video_calling"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="99dp"
        android:onClick="onClick"
        android:text="Counselling Service" />
</RelativeLayout>